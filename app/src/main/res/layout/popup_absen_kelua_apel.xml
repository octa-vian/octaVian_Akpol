<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="230dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bcg_contain_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="Apakah Anda Yakin Ingin Absen Apel?"
                android:textColor="@color/color_black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/btnOkPopupSukses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

               <Button
                   android:id="@+id/btn_cancel"
                   android:layout_width="120dp"
                   android:layout_height="wrap_content"
                   android:text="Cancel"
                   android:layout_margin="15dp"
                   android:background="@drawable/bg_btn_popup_batal"
                   android:textColor="#fff"
                   android:textStyle="bold"/>

                <Button
                    android:id="@+id/btn_keluar"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="Keluar"
                    android:textColor="#fff"
                    android:background="@drawable/bg_btn_popup_masuk"
                    android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>